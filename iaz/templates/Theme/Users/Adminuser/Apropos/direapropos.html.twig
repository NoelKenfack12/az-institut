{% extends "Theme/Users/Adminuser/layoutadmin.html.twig" %}
{% block meta %}
	{{ parent() }}
	<meta name="keywords" content="{{ site }}, Business, Innovation,Administration"/>
	<meta name="author" content="Noel Kenfack"/>
	<meta name="description" content="{{ site }} | Inscription | Cameroun | {{ metier }}" />
{% endblock %}

{% block title %}
	{{ parent() }} | {{ 'Accueil Admin'|trans }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block userblog_menuleft %}
	{{ render(controller("App\\Controller\\Users\\Adminuser\\AccueilController:menuadmin")) }} 
{% endblock %}

{% block userblog_body %}

<div id="content">
	<div class="container">
	{% include 'Theme/General/Template/Menu/descriptionvariable.html.twig' %}
	<!--breadcrumbs start-->
	<div class="inner-content">
	
	<div class="row" style="background: #fafafa; border-bottom: 2px dashed #999;">
	  <div class="col s12 m12 32">
		<h5 class="breadcrumbs-title">
		{{ 'Vous êtes ici'|trans }}:
		
			<a href="#!" class="btn btn-primary bg-struct open-modal-new-slide" style="float: right;">Ajouter <span class="mdi-content-add" style="font-size: 12px;"></span></a>
		</h5>
		
		<ol class="breadcrumb">
		  <li><a href="{{ path('users_adminuser_accueil_administration') }}">{{ 'Accueil'|trans }}</a></li>
		  <li>Ils en parlent (Réaction des responsables, des clients, des partenaires)</li>
		</ol>
	  </div>
	</div>

	<div class="row">
		<div class="col s12 m12">
			{% set id = '' %}
			{% for infos in app.session.flashbag.get('supprime_apropos') %}
			{% if loop.last %}
			<strong style="color: red;"><span class="fa fa-warning"></span> Êtes vous certain de vouloir supprimer le post {{ infos|lower }} </strong>
			<form action="{{ path('users_adminuser_about_us_supprimer',{'id': id }) }}" method="post">
			<input type="submit" value="Supprimer" style="background: red;"/>
			{{ form_rest(formsupp) }}
			</form>

			{% else %}
			{% set id = infos %}
			{% endif %}
			{% endfor %}
		</div>
	</div>

	<div class="row">
		 <div class="col s12 m12">
		 {% for infos in app.session.flashbag.get('information') %}
			{% if loop.first %}
				{{ infos|raw }}
			{% endif %}
		 {% endfor %}
		 </div>
		 <div class="col s12 m12">
			{% for apropos in alldire %}
			<div class="col s12 m4 12">
				<div style="display:block;">
				<ul id="dropdown-cat-{{ apropos.id }}" class="dropdown-content right"style="min-width: 200px!important;">
					<li><a href="#!" class="-text update-content-article" value="{{ apropos.id }}"><i class="mdi-image-edit" style="font-size: 15px;"></i> {{ 'Modifier'|trans }}</a> </li>
					<li><a href="{{ path('users_adminuser_about_us_supprimer', {'id': apropos.id}) }}" class="-text"><i class="mdi-content-clear" style="font-size: 15px;"></i> {{ 'Supprimer'|trans }}</a></li>
					<li><a href="#!" class="-text"><i class="mdi-content-link" style="font-size: 15px;"></i> {{ 'Share link'|trans }}</a></li>
					<li><a href="#!" class="-text"><i class="mdi-action-stars" style="font-size: 15px;"></i> {{ 'User reviews'|trans }}</a></li>
				</ul>
				<a class="dropdown-button waves-effect waves-light" href="#!" data-activates="dropdown-cat-{{ apropos.id }}" style="float:right; margin-top: 15px;"><i class="mdi-hardware-keyboard-control"></i></a>
				</div>
				<ul class="collection" style="overflow: visible;">
				  <a href="#!" class="collection-item" style="padding: 5px;">
					<div style="height: 150px;">
					<div style="color: rgba(0, 0, 0, 0.87); font-size: 18px;"><strong><i class="mdi-content-add-circle" style="font-size: 16px;" title="Plus prioritaire"></i> {{ apropos.nom|trans }} - {{ apropos.poste|trans }}</strong></div>
					<div><img src="{% if apropos.src != 'source' %}{{ asset(apropos.getWebpath) }}{% else %}{{ asset('template/images/amoney.png') }}{% endif %}" alt="" style="width: 100%; height: 120px;"></div>
					</div>
					<div style="background: #f2f2f2; height: 100px; border-top: 5px solid #3565ae;">
					<div style="color: rgba(0, 0, 0, 0.87); margin-top: 10px;">{{ apropos.contenu|trans }}</div>
					<span style="background: green; color: #fff; float: right; display: inline-block; border-radius: 15px; text-align: center; padding: 3px;">{{ apropos.nature }}</span>
					</div>
				  </a>
				</ul>
			</div>
			{% endfor %}	
			<div class="clearfix"></div>
		 </div>

	</div>
</div>
</div>
</div>

<div class="modal fade" data-backdrop="false" id="modalFormSlide" style="margin-top: 60px;">
<div class="modal-dialog">
<div class="modal-content" style="padding: 0px; border-radius: 0px;">
<nav class="red" style="background: #3565ae!important;">
<h5 style="padding-top: 20px; padding-left: 4px;">
  <i class="mdi-editor-insert-comment"></i> Ajouter un avis client <button type="button" class="close right" data-dismiss="modal"><i class="mdi-content-clear modal-action  modal-close"></i></button>
</h5>
</nav>
<div class="modal-body">
<div class="row">
	{{ form_start(form, {'attr': {'action': path('users_adminuser_apropos_de_nous') }}) }}
    <div class="row">
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.nom) }}
	  {{ form_label(form.nom,'Nom de client') }}
	</div>
	
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.poste) }}
	  {{ form_label(form.poste,'Poste si particulier, Slogan si entreprise ou partenaire') }}
	</div>
	</div>
	
	<div class="row">
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.facebook) }}
	  {{ form_label(form.facebook,'Ajouter la page facebook du client') }}
	</div>
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.twitter) }}
	  {{ form_label(form.twitter,'Ajouter la page twitter du client') }}
	</div>
	
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.google) }}
	  {{ form_label(form.google,'Page youtube') }}
	</div>
	</div>
	
	<div class="row">
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  <div style="margin-left: 43px;">
		<select name="nature">
			<option value="entreprise">Sélectionnez le type de compte</option>
			<option value="entreprise">Entreprise</option>
			<option value="particulier">Particulier</option>
			<option value="partenaire">Partenaire</option>
		</select>
	  </div>
	</div>
	
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.contenu, {'attr': {'class': 'materialize-textarea'}}) }}
	  {{ form_label(form.contenu,'Présentation des travaux effectués ou services achetés par ce correspondant') }}
	</div>
	
	<div class="file-field input-field col s12">
		<input class="file-path validate" type="text"/>
		<div class="btn bg-struct" style="margin-left: 15px;">
		  <span>Profil</span>
		  {{ form_widget(form.file) }}
		</div>
	</div>

	<div class="row">
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.tel) }}
	  {{ form_label(form.tel,'Ajouter le téléphone') }}
	</div>
	
	<div class="input-field col s12">
	  <i class="mdi-action-description prefix"></i>
	  {{ form_widget(form.email) }}
	  {{ form_label(form.email,'Ajouter une adresse email') }}
	</div>
	</div>
	
	<div class="col s12" style="margin-top: 20px;">
		 <button class="btn cyan waves-effect waves-light bg-struct" type="submit" name="action"> Enregistrer</button>     
	</div>
	</div>
	
	<div class="clear"></div>
	{{ form_end(form) }}
</div>
</div>

<div class="modal-footer" style="border-top: 1px solid #ddd;">
	{% include 'Theme/General/Template/Menu/social.html.twig' %}
</div>

</div>
</div>
</div>

<div class="modal fade" data-backdrop="false" id="modalGestionCatalogueSelect" style="margin-top: 60px;">
<div class="modal-dialog">
<div class="modal-content" style="padding: 0px; border-radius: 0px;">
<nav class="red" style="background: #3565ae!important;">
<h5 style="padding-top: 20px; padding-left: 4px;">
  <i class="mdi-editor-insert-comment"></i> Mise à jour de l'article <button type="button" class="close right" data-dismiss="modal"><i class="mdi-content-clear modal-action  modal-close"></i></button>
</h5>
</nav>
<div class="modal-body">
<div class="row">
	<div class="row">
	  <div class="input-field col s12">
		<div class="wait-chargement-content-module" style="text-align: center;">
			Patientez un moment pendant le chargement de l'article</br>
			<img src="{{ asset('template/images/loader1.gif') }}" alt="image" style="height: 40px; width: 40px;">
		</div>

		<div class="content-module-loading" style="display: none;">
		
		</div>
	  </div>
	</div>
</div>
</div>

<div class="modal-footer" style="border-top: 1px solid #ddd;">
	{% include 'Theme/General/Template/Menu/social.html.twig' %}
</div>
</div>
</div>
</div>

{% endblock %}

{% block javascripttemplate %}
$('.open-modal-new-slide').click(function(){
	$('#modalFormSlide').modal('show');
});

$('.update-content-article').click(function(){
	var id = $(this).attr('value');
	$('#modalGestionCatalogueSelect').modal('show');
	$('.wait-chargement-content-module').show();
	$('.content-module-loading').hide();
	$.get('{{ path('users_adminuser_modif_about_us_message') }}',{ id: id }, function(data){
		$('.wait-chargement-content-module').hide();
		$('.content-module-loading').show();
		$('.content-module-loading').html(data);
	});
});
{% endblock %}