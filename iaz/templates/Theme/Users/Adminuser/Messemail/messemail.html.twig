{% extends "Theme/Users/Adminuser/layoutadmin.html.twig" %}
{% block meta %}
	{{ parent() }}
	<meta name="keywords" content="{{ site }}, Business, Innovation,Administration"/>
	<meta name="author" content="Noel Kenfack"/>
	<meta name="description" content="{{ site }} | Administration | Cameroun | {{ metier }}"/>
{% endblock %}

{% block title %}
{{ parent() }} | Accueil Admin
{% endblock %}


{% block userblog_menuleft %}
	{{ render(controller("App\\Controller\\Users\\Adminuser\\AccueilController:menuadmin")) }} 
{% endblock %}

{% block userblog_body %}

<div id="content">
	<div class="container">
	{% include 'Theme/General/Template/Menu/descriptionvariable.html.twig' %}
	<!--breadcrumbs start-->
	<div class="inner-content">
				<div class="col-md-9 animated wow fadeInRight" data-wow-delay=".5s">
					<div class="mens-toolbar" style="background: #f7f7f7; border: 1px solid #ddd; margin-bottom: 7px; padding-bottom: 10px;">
							<h2 style="margin: 5px 2px 5px 0px;">Derniers emails de la newsletter</h2>	
					</div>
					<h4>
					{% set id = '' %}
					{% for infos in app.session.flashbag.get('supprime_mess') %}
					{% if loop.last %}
					<strong style="color: red;"><span class="fa fa-warning"></span> ÃŠtes vous certain de vouloir supprimer l'email {{ infos|lower }} </strong>
					<form action="{{ path('users_adminuser_suppression_mess_email_user',{'id': id }) }}" method="post">
					<input type="submit" value="Supprimer" style="background: red;"/>
					{{ form_rest(formsupp) }}
					</form>
					{% else %}
					{% set id = infos %}
					{% endif %}
					{% endfor %}
					<span style="color: red;">
					{% for infos in app.session.flashbag.get('information') %}
					{% if loop.first %}
					{{ infos|raw }}
					{% endif %}
					{% endfor %}
					</span>
					</h4>
				<div class="mid-popular">
						{% for mess in liste_mess %}
							<div class="col-sm-6 item-grid item-gr  simpleCart_shelfItem">
								<div class="grid-pro">
									<div class="women" style="height: 200px; text-align: justify;">
										<a href="#" style="color: #333;">{{ mess.user.name(20) }} <span class="pull-right">{{ mess.date|date('d/m/y') }}</span></a>
										<h6><a href="#a" style="color: #333;">{{ loop.index }}. {{ mess.titre }}</a></h6>
										<h6><a href="#a" style="color: #333;">{{ mess.contenu }}</a></h6>
										<a href="{{ path('users_adminuser_suppression_mess_email_user', {'id': mess.id }) }}" data-text="Supprimer" class="but-hover1 item_add">Supprimer</a>
									</div>
								</div>
							</div>
						{% endfor %}	
						<div class="clearfix"></div>
				</div>
				
				<div class="mens-toolbar" style="background: #f7f7f7; border: 1px solid #ddd; margin-bottom: 7px; padding-bottom: 10px;">
					<h2 style="margin: 5px 2px 5px 0px;">Partager une nouveau message aux membres</h2>	
				</div>
				
				<div>
					{{ form_start(form, {'attr': path('users_adminuser_message_email_new_letter') }}) }}
    			  <div class="col-sm-12">
				     <span style="color:red;">{{ form_errors(form) }}</span>
					 <span style="color:red;">{{ form_errors(form.titre) }}</span>
					 <div class="login-mail">
					 {{ form_widget(form.titre) }}
				     </div>
					 <span style="color:red;">{{ form_errors(form.contenu) }}</span>
					 <div class="login-mail">
					 {{ form_widget(form.contenu) }}
				     </div>
				     
		    	  </div>
				  <div class="col-sm-5">
				  <div class="login-do animated wow fadeInRight" data-wow-delay=".5s" style="margin-top: 15px;">
				  <label class="hvr-sweep-to-top login-sub">
					<input type="submit" value="Partager le message"/>
				  </label>
		          </div>
		          </div>
		         <div class="clear"></div>
				 {{ form_end(form) }}

				</div> 

				<div class="clearfix"></div>
				</div>
			</div class="clearfix"></div>
			</div>	
	</div>	
{% endblock %}

{% block javascripttemplate %}
$('.active').removeClass('active');
{% endblock %}