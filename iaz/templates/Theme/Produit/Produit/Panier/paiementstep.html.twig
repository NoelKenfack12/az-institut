<style>
label{
   cursor: pointer;
}
</style>

<div class="row text-left" style="margin: 0px;">
<div class="col-md-12 text-left">
	<h2>Renseignez le mode de paiement que vous souhaitez utiliser pour le paiement des frais exigibles.</h2>
</div>
<div class="col-md-8 col-lg-8" style="border: 1px solid #ddd;">
	<main style="box-shadow:0px 0px 2px rgba(0,0,0,0.02); background: #fff; margin: 0px; padding: 7px; min-width: 100%; min-height: 400px;">
	  {% if save == true and panier.user != null %}
		<div class="col-md-12" style="margin: 3px 0px;">
			<div class="alert alert-info" style="font-size: 22px; border-left: 3px solid green;">
				<u>Bienvenue sur {{ site }}, {{ panier.user.name(30) }} !</u></br>
				<span style="font-size: 12px;">Vous avez presque fini, il ne vous manque plus qu'indiquer votre mode de paiement et proceder au paiement des frais de votre inscription.</span>
			</div>
		</div>
		{% else %}
		<div class="col-md-12 " style="margin: 3px 0px;">
			<div class="alert alert-info" style="font-size: 22px; border-left: 3px solid green;">
				<u>Félicitation {% if panier.user != null %}{{ panier.user.name(30) }}{% endif %},</u></br>
				<span style="font-size: 12px;">Vous avez presque fini, il ne vous manque plus qu'indiquer votre mode de payement et proceder au paiement des frais de votre inscription</span>
			</div>
		</div>
	   {% endif %}
	   
	   <div class="col-md-12" style="margin: 15px 0px;">
			<label for="mode_paiement_panier">Sélectionnez votre mode de paiement</label>
			<select name="oldcontact" id="mode_paiement_panier" class="form-control" style="min-width: 100%;">
				{% for article in liste_article %}
				<option value="{{ article.id }}" {% if panier.service == article %}selected{% endif %}>{{ article.nom }}</option>
				{% endfor %}
			</select>
		</div>
		<div class="clearfix"></div>
	</main>
</div>

<div class="col-md-4 col-lg-4" style="border: 1px solid #ddd;">
	{% set progress = 100 %}
	{% include 'Theme/Produit/Produit/Panier/cardoverview.html.twig' %}
</div>

<div class="col-md-12 col-lg-12" style="border-top: 1px solid #ddd;">
	<main style="box-shadow:0px 0px 2px rgba(0,0,0,0.0005); margin: 15px 0px; min-width: 100%;">
		<div class="comparison" style="padding: 0px 0px;">
			
		</div>
						
		<a href="#!" class="btn btn-default back_step_tree" style="display: inline-block!important;  margin: 20px 0px 0px 0px; float: left; border-radius: 0px;"><span class="fa fa-chevron-left"></span> Retourner </a>
		<a href="#!" class="btn btn-primary next_step_order_four"  style="display: inline-block!important; margin: 20px 0px 0px 0px; float: right; border-radius: 0px;"> Enregistrer ma commande <span class="fa fa-chevron-right"></span></a>
		<div class="clearfix"></div>
	</main>
</div>
</div>
<div class="clearfix"></div>


<script type="text/javascript">
$('.back_step_tree').click(function(){
	$('.step_card_four').hide();
	$('.step_card_tree').show();
	$('.step_card_one').hide();
	$('.step_card_two').hide();
	$('.step-four-card').removeClass('completed');
});

$('.next_step_order_four').click(function(){
	var id = $('#mode_paiement_panier').val();
	if(id > 0)
	{
		var hauteur = $('.card_content_update').height() + 2;
		var largeur = $('.card_content_update').width() + 32;
		var padding = Math.round(hauteur/2 - 50);
		$('.card_content_update').before('<div class="attente-resultat col-md-12" style="padding-top: 250px; z-index: 10000; height: '+hauteur+'px; text-align: center; vertical-align: center; width: '+largeur+'px; position: absolute; background: rgba(221, 221, 221, 0.48);; margin-top: 25px;"><span><img src="{{ asset('template/images/loader.gif') }}" alt="..." style="width: 30px; height: 30px;" /></span></div>');

		$.post('{{ path('produit_produit_payement_commande_user', {'id': panier.id, 'position': 'paiement'}) }}', {'id': id}, function(data){
		  if(data == 1)
		  {
			  document.location.href= "{{ path('produit_produit_afh_panier_bill', {'id': panier.id}) }}";
		  }else{
			  resetNotif();
			  alertify.alert("Echec, Une erreur a été rencontrée lors de l'enregistrement de votre commande");
			  $('.attente-resultat').hide();
		  }
		});
	}else{
		resetNotif();
		alertify.alert("Echec !!! Vous devez d'abord sélectionner votre mode de paiement avant d'enregistrer la commande.");
	}
});
</script>