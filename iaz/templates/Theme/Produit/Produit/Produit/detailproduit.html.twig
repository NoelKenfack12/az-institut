<div style="background: #f0f0f2; padding-top: 20px;">
<div class="container">
<div class="row">
	<div class="col-md-3">
	
	{% for scat in liste_scat %}
	<div class="card" style="background: #fff; border-radius: 5px; padding: 7px; margin-bottom: 7px; display: block!important;">
		<div class="card-body">
		  <h4 class="card-title">{{ scat.nom }}</h4>
		</div>
		<div class=""> 
			<a href="#!" class="open-liste-formation" style="display: block;" value="{{ scat.id }}">Liste des formations <span class="fa fa-angle-down"></span> </a> 
		</div>
		<div class="list-group list-group-flush item-formation-{{ scat.id }}" style="{% if not(loop.first) %}display: none;{% endif %}">
			{% for prod in scat.getProduitScat %}
			<a href="{{ path('produit_produit_detail_produit_market', {'id': prod.id}) }}" title="{{ prod.nom }}" class="list-group-item list-group-item-action" style="border: none;"><span class="cool-link">{{ prod.nom }}</span></a>
			{% endfor %}
		</div>
	</div>
	{% endfor %}

	</div>
	
	<div class="col-md-9">
		<div class="my-div">
		<section class="testing" style="width: 100%;">
		   <div class="description2 to-expand">
			<h2>Formation: {{ produit.nom }} </h2>
			<p>
				{{ produit.contenu|raw }}
			</p>
		   </div>
		   <div class="row">
			   <div class="col-md-4">
					<div class='box'>
					  <div class='wave -one'></div>
					  <div class='wave -two'></div>
					  <div class='wave -three'></div>
