	<a href="{{ path('produit_produit_produit_formation_institut', {'id': formation.id }) }}" title="{{ formation.nom }}" class="list-group-item list-group-item-action" style="border: none;"><span class="cool-link">Liste complète</span></a>
</div>       
</div>
{% endfor %}	

