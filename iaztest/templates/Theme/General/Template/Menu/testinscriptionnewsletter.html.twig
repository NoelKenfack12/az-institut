			}
			});
        }
    } else {
    // IE
        if(!ev.toElement){
            $('#test-newsletter').modal('show');
			$.post('{{ path('general_template_stop_alert_newsletter') }}', function(data) {
			if(data == 1)
			{
			
			}
			});
        } else if(ev.toElement.tagName == "HTML"){
