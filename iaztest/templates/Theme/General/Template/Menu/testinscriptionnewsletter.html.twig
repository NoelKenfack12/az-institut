<div class="modal fade" data-backdrop="false"  id="test-newsletter" style="margin-top: 50px;">
<div class="modal-dialog modal-md">
<div class="modal-content" style="border-radius: 0px;">
<div class="modal-header" style="border-bottom: 1px solid white;">
<button type="button" class="close" data-dismiss="modal">&times;</button>
<h4 class="modal-title"><img src="{{ asset('template/images/logo.png') }}" alt="logo" style="width: 60px; height: 50px;"> {{ site }}</br><span style="font-size: 15px;"> Ne parter pas sans vous abonné à notre newsletter.</span></h4>
</div>
<div class="modal-body">
	<div class="row">
	<div class="col-xs-8">
		 <div>
			<form  action="{{ path('users_user_create_newsletter_account') }}" method="post" {{ form_enctype(form) }}>
			<div class="input-group">
			{{ form_widget(form.email,{'attr': {'class':'form-control input-lg','style':'background: #F5F5F5;','placeholder':'Entrez votre Email'}}) }}
				<span class="input-group-btn">
					<button class="btn btn-default" type="submit" style="height: 46px; border-radius: 0px 5px 5px 0px;">Ok <i class="fa fa-check"></i></button>
				</span>
				{{ form_rest(form) }}
			</div>
			</form>
		 </div>
	</div>
	<div class="col-xs-4">
	<img src="{{ asset('template/images/contact.png') }}" alt="" style="width: 100%; height: 60px;"/>
	</div>
	</div>
</div>
</div>
</div>
</div>
