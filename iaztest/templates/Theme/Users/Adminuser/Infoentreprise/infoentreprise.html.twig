{% extends "Theme/Users/Adminuser/layoutadmin.html.twig" %}
{% block meta %}
	{{ parent() }}
	<meta name="keywords" content="{{ site }}, Business, Innovation,Administration"/>
	<meta name="author" content="Noel Kenfack"/>
	<meta name="description" content="{{ site }} | Inscription | Cameroun | {{ metier }}" />
{% endblock %}

{% block title %}
{{ parent() }} | Accueil Admin
{% endblock %}

{% block userblog_body %}

<!--content-->
		<div class="product">
			<div class="container">
				<div class="col-md-3 product-bottom">
				{{ render(controller("App\\Controller\\Users\\Adminuser\\AccueilController:menuadmin")) }}
				<!---->
				</div>
				<div class="col-md-9 animated wow fadeInRight" data-wow-delay=".5s">
					<div class="mens-toolbar" style="background: #f7f7f7; border: 1px solid #ddd; margin-bottom: 7px; padding-bottom: 10px;">
							<h2 style="margin: 5px 2px 5px 0px;">Espace informations à propos de l'entreprise</h2>	
					</div>
					<h4>
					{% set id = '' %}
					{% for infos in app.session.flashbag.get('supprime_apropos') %}
					{% if loop.last %}
					<strong style="color: red;"><span class="fa fa-warning"></span> Êtes vous certain de vouloir supprimer la publication {{ infos|lower }} </strong>
					<form action="{{ path('users_adminuser_supprission_information_entreprise', {'id': id }) }}" method="post">
					<input type="submit" value="Supprimer" style="background: red;"/>
					{{ form_rest(formsupp) }}
					</form>

					{% else %}
					{% set id = infos %}
					{% endif %}
					{% endfor %}
					</h4>
				<div class="mid-popular">
						{% for apropos in allinfo %}
							<div class="col-sm-6 item-grid item-gr  simpleCart_shelfItem">
								<div class="grid-pro">
									{% if apropos.imginfoentreprise != null %}
									<div  class=" grid-product " >
										<figure>		
											<a href="single.html">
												<div class="grid-img">
													<img  src="{{ asset(apropos.imginfoentreprise.getWebpath) }}" class="img-responsive" alt="" style="height: 110px;">
												</div>		
											</a>		
										</figure>	
									</div>
									{% endif %}
									<div class="women" style="text-align: justify; height: 300px;">
										<a href="#">{{ apropos.user.name(20) }}  <span class="pull-right">{{ apropos.date|date('d/m/y') }}</span></a>
										<h6><strong>{{ apropos.titre }}</strong></h6>
										<h6>{{ apropos.description }}</h6>
										<a href="{{ path('users_adminuser_supprission_information_entreprise', {'id': apropos.id }) }}" data-text="Supprimer" class="but-hover1 item_add">Supprimer</a>
										<a href="{{ path('users_adminuser_modification_information_entreprise_courant', {'id': apropos.id }) }}" data-text="Modifier" class="but-hover1 item_add">Modifier</a>
									</div>
								</div>
							</div>
						{% endfor %}	
						<div class="clearfix"></div>
				</div>
				
				<div class="mens-toolbar" style="background: #f7f7f7; border: 1px solid #ddd; margin-bottom: 7px; padding-bottom: 10px;">
					<h2 style="margin: 5px 2px 5px 0px;">Ajouter les informations à propos de l'entreprise à l'aide du formulaire ci-dessus.</h2>	
				</div>
				
				<div>
    	        <h4 class="title">
			    <span style="color: red;">
				{% for infos in app.session.flashbag.get('information') %}
				{% if loop.first %}
				{{ infos|raw }}
				{% endif %}
				{% endfor %}
				</span>
				</h4>
				{{ form_start(form, {'attr': path('users_adminuser_gestion_info_entreprise') }}) }}
    			  <div class="col-sm-6">
				     <span style="color:red;">{{ form_errors(form) }}</span>
					 <span style="color:red;">{{ form_errors(form.titre) }}</span>
					 <div class="login-mail">
					 {{ form_widget(form.titre) }}
				     </div>
					 <span style="color:red;">{{ form_errors(form.description) }}</span>
					 <div class="login-mail">
					 {{ form_widget(form.description) }}
				     </div>
		    	  </div>
		    	  <div class="col-sm-6">	
					 <span style="color:red;">{{ form_errors(form.rang) }}</span>
					 <div class="login-mail">
					 {{ form_widget(form.rang) }}
				     </div>
					 <span style="color:red;">{{ form_errors(form.imginfoentreprise) }}</span>
				     <div style="margin-bottom: 18px;">{{ form_widget(form.imginfoentreprise) }}</div>
					 
				  <div class="login-do animated wow fadeInRight" data-wow-delay=".5s" style="margin-top: 15px;">
				  <label class="hvr-sweep-to-top login-sub">
					<input type="submit" value="Enregistrer"/>
				  </label>
		          </div>
		          </div>
		         <div class="clear"></div>
				 {{ form_end(form) }}
				</div> 
				</div>
			</div class="clearfix"></div>
		</div>	
{% endblock %}

{% block javascripttemplate %}
	$('.active').removeClass('active');
{% endblock %}