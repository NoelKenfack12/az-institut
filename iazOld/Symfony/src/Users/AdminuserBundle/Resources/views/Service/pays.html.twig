{% extends "UsersAdminuserBundle::layoutadmin.html.twig" %}
{% block meta %}
{{ parent() }}
<meta name="keywords" content="{{ site }}, Business, Innovation,Administration"/>
<meta name="author" content="Noel Kenfack"/>
<meta name="description" content="{{ site }} | Inscription | Cameroun | {{ metier }}" />
{% endblock %}
{% block title %}
{{ parent() }} | Accueil Admin
{% endblock %}

{% block userblog_body %}

<!-- START CONTENT -->
      <section id="content">
			<!--card stats start-->
		  <!--start container-->
        <div class="container" >
          <div class="section">
			<!-- profile-page-content -->
            <div id="profile-page-content" class="row">
              <!-- profile-page-sidebar-->
              <div id="profile-page-sidebar" class="col s12 m4">
			  {{ render(controller("UsersAdminuserBundle:Accueil:menuadmin")) }}
			  </div>
              <!-- profile-page-sidebar-->

              <!-- profile-page-wall -->
              <div id="profile-page-wall" class="col s12 m8">
			   <div id="profile-page-sidebar" class="col s12 m12">
			    {% for infos in app.session.flashbag.get('information') %}
				{% if loop.first %}
					{% include 'GeneralTemplateBundle:Menu:flasinfos.html.twig' %}
				{% endif %}
				{% endfor %}
			   </div>

				{% set id = 0 %}
				{% for infos in app.session.flashbag.get('supprime_ville') %}
				{% if loop.last %}
				<div class="card-panel" style="margin-top: 0px;">
				<strong style="color: red;"><span class="fa fa-warning"></span> ÃŠtes vous certain de vouloir supprimer le pays {{ infos|lower }} </strong>
				<form action="{{ path('produit_service_supprimer_ville_courante',{'id': id }) }}" method="post">
				<input type="submit" value="Supprimer" style="background: red;"/>
				{{ form_rest(formsupp) }}
				</form>
				</div>

				{% else %}
				{% set id = infos %}
				{% endif %}
				{% endfor %}

		  
			  <div class="card-panel">
                <div class="row">
                <form class="col s12" action="{{ path('produit_service_ajouter_ville') }}" method="post" {{ form_enctype(form) }}>
                  <h4 class="header2">Ajouter un nouveau pays.</h4>
                  <div class="row">
				  <span style="color:red;">{{ form_errors(form) }}</span>
				  <span style="color:red;">{{ form_errors(form.file) }}</span>
				  <span style="color:red;">{{ form_errors(form.siteweb) }}</span>
				  <span style="color:red;">{{ form_errors(form.citoyen) }}</span>
				  <span style="color:red;">{{ form_errors(form.citoyenne) }}</span>
				  <span style="color:red;">{{ form_errors(form.code) }}</span>
				  <span style="color:red;">{{ form_errors(form.domaine) }}</span>
				  
                  <div class="row">
                    <div class="input-field col s4">
                      <i class="mdi-action-assignment prefix"></i>
					  {{ form_widget(form.nom) }}
					  {{ form_label(form.nom,'Nom du pays') }}
                    </div>
                      <div class="file-field input-field col s4">
						<input class="file-path validate" type="text"/>
						<div class="btn">
						  <span>Drapeau</span>
						  {{ form_widget(form.file) }}
						</div>
					  </div>
					  <div class="input-field col s4">
						  <i class="mdi-action-assignment prefix"></i>
						  {{ form_widget(form.siteweb) }}
						  {{ form_label(form.siteweb,'Site web pays') }}
					  </div>
					  <div class="input-field col s4">
                      <i class="mdi-action-assignment prefix"></i>
					  {{ form_widget(form.citoyen) }}
					  {{ form_label(form.citoyen,'citoyen') }}
					  </div>
					  <div class="input-field col s4">
                      <i class="mdi-action-assignment prefix"></i>
					  {{ form_widget(form.citoyenne) }}
					  {{ form_label(form.citoyenne,'citoyenne') }}
					  </div>
					  <div class="input-field col s4">
                      <i class="mdi-action-assignment prefix"></i>
					  {{ form_widget(form.code) }}
					  {{ form_label(form.code,'Code') }}
					  </div>
					  <div class="input-field col s4">
                      <i class="mdi-action-assignment prefix"></i>
					  {{ form_widget(form.domaine) }}
					  {{ form_label(form.domaine,'domaine pays') }}
					  </div>
                    <div class="input-field col s4">
                      <div class="input-field col s12">
                        <button class="btn cyan waves-effect waves-light" type="submit" name="action"> Enregistrez</button>
                      </div>
                    </div>
                  </div>
				  </div>
				  {{ form_rest(form) }}
                </form>
                
              </div>
			  </div>
			  <div class="row">
			  {% for pays in liste_pays %}
		   <!-- blog card -->
			<div class="col s12 m4">
			
			<ul id="profile-page-about-details" class="collection z-depth-1" style="overflow: visible; height: 130px;">
			  <li class="collection-item" style="background: #f2f2f2;">
				<div class="row">
				  <div class="col s10 grey-text darken-1">
					<img src="{% if pays.src != null %}{{ asset(pays.getWebPath) }}{% else %}{{ asset('templateofferts/images/logo.png') }}{% endif %}" alt="" class="circle responsive-img valign profile-image left" style="width: 30px; height: 30px;">
				  <span style="margin-left: 7px;">{{ pays.nom }} - {{ pays.domaine }}</span>
				  </div>
				  <div class="col s2 grey-text text-darken-4 right-align" >
				  
				  <ul id="dropdowncat-{{ pays.id }}" class="dropdown-content" style="float: right; min-width: 150px;">
					<li>
					<a href="#!" class="update-content-article" value="{{ pays.id }}"><i class="mdi-editor-border-color"></i> Modifier</a>
					</li>
					<li>
					<a href="{{ path('produit_service_supprimer_ville_courante', {'id': pays.id}) }}"><i class="mdi-action-highlight-remove"></i> Supprimer</a>
					</li>
				  </ul>
				  <a class="dropdown-button right" href="#!" data-activates="dropdowncat-{{ pays.id }}"><i class="mdi-navigation-arrow-drop-down"></i></a>
				  
				  </div>
				</div>
			  </li>
			  <li style="padding: 2px 5px;">
				{{ pays.domaine }} - {{ pays.code }} - {{ pays.citoyen }} - {{ pays.citoyenne }} - {{ pays.siteweb }}
			  </li>

			</ul>
			</div>
			{% endfor %}
			</div>
			</div>
		  </div>
	
		</div>
		</div>
	  </section>

<div class="modal fade" data-backdrop="false"  id="modalGestionCatalogueSelect" style="margin-top: 60px;">
<div class="modal-dialog">
<div class="modal-content" style="padding: 0px; border-radius: 0px;">
<nav class="red" style="background: #66afe9 !important;">
<h5 style="padding-top: 20px; padding-left: 4px;">
  <i class="mdi-hardware-keyboard-alt"></i> Gestion du catalogue <button type="button" class="close right" data-dismiss="modal"><i class="mdi-content-clear modal-action  modal-close"></i></button>
</h5>
</nav>
<div class="modal-body">
<div class="row">
	<div class="row">
	  <div class="input-field col s12">
		<div class="wait-chargement-content-module" style="text-align: center;">
			Patientez un moment pendant le chargement de l'article</br>
			<img src="{{ asset('template/images/loader1.gif') }}" alt="image" style="height: 40px; width: 40px;">
		</div>

		<div class="content-module-loading" style="display: none;">
		
		</div>
	  </div>
	</div>
</div>
</div>
</div>
</div>
</div>

{% endblock %}

{% block javascripttemplate %}
$('.update-content-article').click(function(){
	var id = $(this).attr('value');
	$('#modalGestionCatalogueSelect').modal('show');
	$('.wait-chargement-content-module').show();
	$('.content-module-loading').hide();
	$.get('{{ path('users_adminuser_update_pays_info') }}',{ id: id }, function(data){
		$('.wait-chargement-content-module').hide();
		$('.content-module-loading').show();
		$('.content-module-loading').html(data);
	});
});

{% endblock %}
