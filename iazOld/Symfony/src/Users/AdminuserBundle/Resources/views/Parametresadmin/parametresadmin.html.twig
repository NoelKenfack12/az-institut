{% extends "UsersAdminuserBundle::layoutadmin.html.twig" %}

{% block meta %}
	{{ parent() }}
	<meta name="keywords" content="{{ site }}, Business, Innovation,Administration"/>
	<meta name="author" content="Noel Kenfack"/>
	<meta name="description" content="{{ site }} | Inscription | Cameroun | {{ metier }}" />
{% endblock %}

{% block title %}
	{{ parent() }} | {{ 'Accueil Admin'|trans }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block userblog_menuleft %}
	{{ render(controller("UsersAdminuserBundle:Accueil:menuadmin")) }}
{% endblock %}

{% block userblog_body %}

<div id="main">
<!--start container-->
<div class="container">
<div class="row" style="background: #fafafa; border-bottom: 2px dashed #999;">
  <div class="col s12 m12 16">
	<h5 class="breadcrumbs-title">
	{{ 'Vous êtes ici'|trans }}:
	</h5>
	<ol class="breadcrumb">
	  <li class="breadcrumb-item"><a href="{{ path('users_user_acces_plateforme') }}"><span class="fa fa-home"></span> Accueil</a></li>
	  <li class="breadcrumb-item"><a href="{{ path('users_adminuser_accueil_administration') }}">Admin</a></li>
	  <li class="breadcrumb-item active">Paramètres</li>
	</ol>
  </div>
  <div class="col s12 m6 16">
	<div class="row">
	
	</div>
  </div>
</div>

<div class="content-wrapper">


    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
		<div class="row">
		<div class="col-md-12">
		<main style="box-shadow:0px 0px 2px rgba(0,0,0,0.05);">
		  {% for param in liste_param %}
		  <div class="topic">
			<div class="open">
			  <h2 class="question"><img src="{% if param.src != null %}{{ asset(param.getWebPath) }}{% else %}{{ asset('template/images/3plan.png') }}{% endif %}" alt="" style="width: 30px; height: 30px; margin-bottom: -8px!important;"/> {{ param.type }} <span class="fa fa-arrow-right" style="font-size: 11px;"></span> {% if param.valeur != null %}{{ param.valeur }}{% else %}{{ param.src }}{% endif %}</h2>
			  <span class="faq-t"></span>
			</div>
			
			<div class="answer">
				<div class="module-comment-block">
				<div>{% if param.description != null %}{{ param.description }}{% else %}Vide{% endif %}</div>
				
				{% if param.type == 'slideacceuil' %}
					<form class="row" method="post" action="{{ path('users_adminuser_parametres_administration') }}">
					<div class="col-md-6">
						<select name="valeur" id="type_style">
							<option value="0">Selectionnez le type de slide pour l'accueil</option>
							<option value="layerslider" {% if param.valeur == 'layerslider' %}selected{% endif %}>Layer Slider</option>
							<option value="alloy_finger_lightbox" {% if param.valeur == 'alloy_finger_lightbox' %}selected{% endif %}>Alloy Finger Lightbox</option>
						</select>
						
						<input type="hidden" name="idparam" value="{{ param.id }}"/>
					</div>

					<div class="col s12 m6 16">
						<button class="btn btn-primary">Envoyer</button>
					</div>
					</form>
				{% elseif param.type == 'logosm' %}
					<form class="row" action="{{ path('users_adminuser_parametres_administration') }}" method="post"  enctype="multipart/form-data">
						<div class="col-md-6">
							<div>{{ 'Importez votre logo (Forme réduite)'|trans }}</div>
							<div class="form-group">
								<input type="file" name="logosm" id="profil-info-logosm" style="width: 100%; border: 1px dotted #ddd"/>
							</div>
							
							<input type="hidden" name="idparam" value="{{ param.id }}"/>
						</div>

						<div class="col-md-6" style="padding-top: 15px;">
							<button class="btn btn-primary">Envoyer</button>
						</div>
					</form>
				{% elseif param.type == 'aproposaccueil' or param.type == 'aproposfooter' %}
					<form class="row" method="post" action="{{ path('users_adminuser_parametres_administration') }}">
					<div class="col-md-6 form-group">
						<input type="text" name="valeur" class="form-control" placeholder="Entrez la valeur de ce champ"/>
						
						<input type="hidden" name="idparam" value="{{ param.id }}"/>
					</div>
					
					<div class="col-md-6 form-group">
						<input type="text" name="link" class="form-control" placeholder="Insérez un lien"/>
					</div>

					<div class="col-md-6">
						<button class="btn btn-primary">Envoyer</button>
					</div>
					</form>
				{% else %}
					<form class="row" method="post" action="{{ path('users_adminuser_parametres_administration') }}">
					
					<div class="col-md-6 form-group">
						<input type="text" name="link" class="form-control" placeholder="Libélé du champ"/>
					</div>
					
					<div class="col-md-6 form-group">
						<input type="text" name="valeur" class="form-control" placeholder="Entrez la valeur de ce champ"/>
						
						<input type="hidden" name="idparam" value="{{ param.id }}"/>
					</div>

					<div class="col-md-6">
						<button class="btn btn-primary">Envoyer</button>
					</div>
					</form>
				{% endif %}
				
				</div>
			</div>
		  </div>
		  {% else %}
		  <div class="topic">
			<div class="open">
			<h2 class="question">1. Aucun article publié pour cette catégorie
			</h2><span class="faq-t"></span>
			</div>
			<p class="answer">La liste des articles des supports s'affichera ici.</p>
		  </div>
		  {% endfor %}
		</main>
		</div>
		</div>

	  </div>
	</section>
</div>

</div>
</div>



	  
{% endblock %}

{% block srcjavascripttemplate %}

{% endblock %}

{% block javascripttemplate %}

$(".open").click(function(){
  var container = $(this).parents(".topic");
  var answer = container.find(".answer");
  var trigger = container.find(".faq-t");
  
  answer.slideToggle(200);
  
  if (trigger.hasClass("faq-o")) {
    trigger.removeClass("faq-o");
  }
  else {
    trigger.addClass("faq-o");
  }
  
  if (container.hasClass("expanded")) {
    container.removeClass("expanded");
  }
  else {
    container.addClass("expanded");
  }
});
{% endblock %}