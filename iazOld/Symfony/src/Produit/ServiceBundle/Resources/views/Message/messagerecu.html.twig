{% extends "UsersAdminuserBundle::layoutadmin.html.twig" %}
{% block meta %}
{{ parent() }}
<meta name="keywords" content="{{ site }}, Business, Innovation,Administration"/>
<meta name="author" content="Noel Kenfack"/>
<meta name="description" content="{{ site }} | Inscription | Cameroun | {{ metier }}" />
{% endblock %}
{% block title %}
{{ parent() }} | Accueil Admin
{% endblock %}

{% block userblog_menuleft %}
	{{ render(controller("UsersAdminuserBundle:Accueil:menuadmin")) }}
{% endblock %}

{% block userblog_body %}

<div id="content">
	<div class="container">
	{% include 'GeneralTemplateBundle:Menu:descriptionvariable.html.twig' %}
	<!--breadcrumbs start-->
	<div class="inner-content">
	

			<div class="col s12 m12 l6" data-wow-delay=".5s" value="0">
				<div>
				  <h3>Liste des messages du formulaire de contact reçu.</h5>
				</div>
				<div style="background: #fff; min-height: 500px;">
				<h4>
				{% set id = '' %}
				{% for infos in app.session.flashbag.get('supprime_mess') %}
				{% if loop.last %}
				<strong style="color: red;"><span class="fa fa-warning"></span> Êtes vous certain de vouloir supprimer le message {{ infos|lower }} </strong>
				<form action="{{ path('users_adminuser_supprim_message_contact',{'id': id }) }}" method="post">
				<input type="submit" value="Supprimer" style="background: red;"/>
				{{ form_rest(formsupp) }}
				</form>

				{% else %}
				{% set id = infos %}
				{% endif %}
				{% endfor %}
					{% for infos in app.session.flashbag.get('information') %}
					{% if loop.last %}
					<span style="color: red;"> {{ infos }}</span>
					{% endif %}
					{% endfor %}
				</h4>
				{% for mess in liste_mess  %}
					<div class="col-sm-4 item-grid item-gr  simpleCart_shelfItem">
						<div class="grid-pro">
							<div  class=" grid-product " >
								<figure>		
									<a href="#e">
										<div class="grid-img">
										   <img src="{% if mess.user != null %}{% if mess.user.imgprofil != null %}{{ asset(mess.user.imgprofil.getWebpath) }}{% else %}{{ asset('template/images/panier.jpg') }}{% endif %}{% else %}{{ asset('template/images/panier.jpg') }}{% endif %}" alt="" style="height: 180px;"/>
										</div>
										<div class="grid-img">
											<img src="{% if mess.user != null %}{% if mess.user.imgprofil != null %}{{ asset(mess.user.imgprofil.getWebpath) }}{% else %}{{ asset('template/images/panier.jpg') }}{% endif %}{% else %}{{ asset('template/images/panier.jpg') }}{% endif %}" alt="" style="height: 180px;"/>
										</div>			
									</a>		
								</figure>	
							</div>
							<div class="women" style="height: 300px;">
								<h6>{% if mess.user != null %}{{ mess.user.name(20) }}{% else %}{{ mess.nom }}{% endif %}</h6>
								<h6>{% if mess.user != null %}{{ mess.user.username }}{% else %}{{ mess.email }}{% endif %}</h6>
								<h6>{{ mess.date|date('d/m/y') }}</h6>
								<h6>{{ mess.titre }}</h6>
								<h6>{{ mess.contenu }}</h6>
								<a href="{{ path('users_adminuser_supprim_message_contact', {'id': mess.id }) }}" data-text="Supprimer" class="but-hover1 item_add">Supprimer</a>
							</div>
						</div>
					</div>
				{% endfor %}
				</div>				
			<div class="clearfix"></div>
			</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripttemplate %}
{% endblock %}